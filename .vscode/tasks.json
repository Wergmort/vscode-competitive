{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run",
            "dependsOn": [
                "Build",
                "Run with Input"
            ],
            "dependsOrder": "sequence",
            "type": "shell",
            "command": "echo Build and Run complete",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "C:\\Program Files (x86)\\winlibs-x86_64-mcf-seh-gcc-13.2.0-llvm-16.0.6-mingw-w64ucrt-11.0.1-r2\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I",
                "${workspaceFolder}/ac-library-master/ac-library-master"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "手動設定によるビルドタスク",
            "group": {
                "kind": "build",
            }
        },
        {
            "label": "Run with Input",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "${fileDirname}\\${fileBasenameNoExtension}.exe < ${fileDirname}\\input.txt"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [],
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe アクティブなファイルのビルド",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "コンパイラ: cl.exe"
        }
    ]
}
